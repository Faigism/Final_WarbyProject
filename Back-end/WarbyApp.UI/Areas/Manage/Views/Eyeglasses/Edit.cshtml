@model EyeglassesEdit_VM
@{
    ViewData["Title"] = "Create";
}
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">
    <main class="mdl-layout__content mdl-color--grey-100">
        <div class="mdl-card mdl-shadow--2dp employer-form" action="#">
            <div class="mdl-card__title">
                <h2>Product Create Form</h2>
                <div class="mdl-card__subtitle">Please complete the form</div>
            </div>

            <div class="mdl-card__supporting-text">
                <form method="post" class="form" enctype="multipart/form-data">
                    <div class="form__article">
                        <div class="mdl-grid">
                            <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <label class="mdl-textfield__label" asp-for="Name">Name</label>
                                <input class="mdl-textfield__input" asp-for="Name">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                        </div>

                        <div class="mdl-grid">
                            <div class="mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <label class="mdl-textfield__label" asp-for="Material">Material</label>
                                <input class="mdl-textfield__input" asp-for="Material">
                                <span class="text-danger" asp-validation-for="Material"></span>
                            </div>
                        </div>
                        <div class="mdl-grid">
                            <div class="mdl-cell mdl-cell--4-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <label class="mdl-textfield__label" asp-for="CostPrice">CostPrice</label>
                                <input class="mdl-textfield__input" asp-for="CostPrice">
                                <span class="text-danger" asp-validation-for="CostPrice"></span>
                            </div>
                            <div class="mdl-cell mdl-cell--4-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <label class="mdl-textfield__label" asp-for="SalePrice">SalePrice</label>
                                <input class="mdl-textfield__input" asp-for="SalePrice">
                                <span class="text-danger" asp-validation-for="SalePrice"></span>
                            </div>
                            <div class="mdl-cell mdl-cell--4-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <label class="mdl-textfield__label" asp-for="DiscountPercent">DiscountPercent</label>
                                <input class="mdl-textfield__input" asp-for="DiscountPercent">
                                <span class="text-danger" asp-validation-for="DiscountPercent"></span>

                            </div>
                            <div class="mdl-grid">
                                <label asp-for="ColorId">Color</label>
                                <select class="form-control" asp-for="ColorId" asp-items="new SelectList(ViewBag.Colors,nameof(Color_VMItem.Id),nameof(Color_VMItem.ColorName),nameof(Color_VMItem.ColorImage))"></select>
                            </div>
                        </div>
                        <div class="mdl-grid">
                            <label class="mdl-textfield__label" asp-for="ImageFile">ImageFile</label>
                            <input class="mdl-textfield__input" asp-for="ImageFile">
                            <span class="text-danger" asp-validation-for="ImageFile"></span>
                        </div>
                    </div>
                    <div class="form__action">
                        <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="isInfoReliable">
                        <input type="checkbox" id="isInfoReliable" class="mdl-checkbox__input" required />
                        <span class="mdl-checkbox__label">I confirm the information entered</span>
                        </label>
                        <button type="submit" id="submit_button" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>



